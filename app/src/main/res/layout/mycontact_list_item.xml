<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/my_contact_pimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/my_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="mohammad Mehdi"

        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/my_contact_name"
        android:layout_marginTop="49dp"
        android:layout_below="@id/my_contact_name"
        android:text="09167045504"
        android:id="@+id/my_contact_number"
        android:layout_alignLeft="@+id/my_contact_name" />

    <ImageView
        android:id="@+id/icon_call"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/my_contact_pimg"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/icon_call"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/icon_call2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/icon_call"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_toLeftOf="@id/icon_call"
        app:srcCompat="@drawable/icon_sms" />
</RelativeLayout>